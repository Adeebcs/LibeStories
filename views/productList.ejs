<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Books</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Corrected include statement for the header partial -->
    <%- include('partials/header1') %>

    <div class="container mt-5">
        <!-- Search Bar -->
        <div class="row mb-4">
            <div class="col-12">
                <form class="form-inline" action="/search" method="get">
                    <input class="form-control mr-sm-2" type="search" name="q" placeholder="Search in Library" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>

        <!-- Categories Section -->
        <div class="row mt-5">
            <div class="col-12">
                <h2>Categories</h2>
                <% categories.forEach(category => { %>
                    <h3><%= category.name %></h3>
                    <div class="row">
                        <% category.books.forEach(book => { %>
                            <div class="col-sm-2">
                                <a href="/book/<%= book._id %>">
                                    <div class="card mb-4">
                                        <img class="card-img-top" src="<%= book.image1 %>" alt="<%= book.name %>">
                                        <div class="card-body text-center">
                                            <h5 class="card-title"><%= book.name %></h5>
                                            <p class="card-text"><%= book.author %></p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <!-- Corrected include statement for the footer partial -->
    <%- include('partials/footer1') %>
</body>
</html>
